{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/main.jsx",
    "index.html"
  ],
  "project": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "ignore": [
    "LEGACY/**",
    "src/dev/**",
    "**/*.test.{js,jsx,ts,tsx}",
    "**/*.spec.{js,jsx,ts,tsx}",
    "playwright-report/**",
    "vite.config.js",
    "postcss.config.js",
    "eslint.config.mjs"
  ],
  "paths": {
    "@/*": ["src/*"],
    "@styles/*": ["src/styles/*"]
  }
}
